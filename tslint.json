{
  "extends": ["tslint:latest", "tslint-react"],
  "rulesDirectory": ["./src"],
  "exclude": [
    "dist/**/*",
    "node_modules",
  ],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "member-access": [true, "no-public"], // Or false. Read the rule and see what you want.
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape",
      "avoid-template"
    ],
    "semicolon": false,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}